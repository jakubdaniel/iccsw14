\newcounter{rrCount}
\newcommand{\replace}[3]{%
  \GetTokens{rrFirst}{rrRest}{#3#1}%
  \rrFirst%
  \forloop{rrCount}{0}{\value{rrCount} < 100}{%
    \ifthenelse{\equal{\rrRest}{}}{%
      \setcounter{rrCount}{101}%
    }{%
      \GetTokens{rrFirst}{rrRest}{\rrRest}%
      #2\rrFirst%
    }%
  }%
}

